<!DOCTYPE html>
<html lang="en">

{% include 'views/head.html.twig' with {'title': 'Contact us'} %}

<body>
{% include 'views/header.html.twig' with {'selected': 'Contact us'} %}

<main class="main-container">
    <form action="src/contact-us.php" method="post" class="form">
        <h1>Contact Us</h1>
        <div class="form-item">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Your name" value="{{ username }}"/>
        </div>
        <div class="form-item">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Email where we can contact you" value="{{ email }}"/>
        </div>
        <div class="form-item">
            <label for="subject">Subject</label>
            <textarea id="subject" name="subject" placeholder="Write something..." style="height: 200px" minlength="5"></textarea>
        </div>
        <div class="form-item">
            <button type="submit" class="button primary">Submit</button>
        </div>
    </form>
    <div id="progressbar"></div>
    <div id="scrollPath"></div>
</main>

{% include 'views/maps.php.twig' %}
{% include 'views/footer.html.twig' %}
</body>
</html>