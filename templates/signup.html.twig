<!DOCTYPE html>
<html lang="en">

{% include 'views/head.html.twig' with {'title': 'Sign up'} %}

<body>
{{ include('views/header.html.twig') }}

<main class="main-container">
    <form action="src/signup.php" method="post" class="form" name="jsform" onsubmit="return validate()">
        <h1>Sign Up</h1>
        <div class="form-item">
            <label for="username">Username</label>
            <input type="text" placeholder="Enter username" name="username" id="username" value="{{ username }}"
                   required/>
        </div>
        <div class="form-item">
            <label for="email">Email (optional)</label>
            <input type="email" placeholder="Enter email" name="email" id="email" value="{{ email }}"/>
        </div>
        <div class="form-item">
            <label for="password">Password</label>
            <input type="password" placeholder="Enter password" minlength="6" name="password" id="password"
                   value="{{ password }}" required/>
        </div>
        <div class="form-item">
            <label for="password-repeat">Repeat Password</label>
            <input type="password" placeholder="Repeat password" minlength="6" id="password-repeat" name=password-repeat
                   value="{{ password }}" required/>
        </div>
        <div class="form-item">
            <input type="checkbox" name="agree-to-tp" id="agree-to-tp"/>
            <label for="agree-to-tp">By clicking on this box you agree to our</label>
            <a href="#" class="link">Terms & Privacy.</a>
        </div>

        <p class="error-message">{{ error_message }}</p>

        <div class="form-item">
            <button type="submit" class="button primary">Sign Up</button>
            <a href="src/login.php" class="button secondary">Log in</a>
        </div>
    </form>
    <div id="progressbar"></div>
    <div id="scrollPath"></div>
</main>
{{ include('views/footer.html.twig') }}
</body>
</html>